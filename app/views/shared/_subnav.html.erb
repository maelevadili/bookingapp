<%= form_tag developers_path, method: "get", class: "form-inline" do %>
  <div class="subnav">
    <div class="search">
        <div id="search-data" class="input-wrapper search-data" data-skills="<%= @skills.to_json %>">
          <%= icon('fas', 'search', class: 'search-icon is-visible') %>
          <%= text_field_tag :q, @query, autocomplete: :off, class: "search-input" %>
        </div>
    </div>
    <div class="price-filter">
      <div class="dropdown">
        <a class="dropdown-toggle text-center" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
          <span id="min-price">
            <%= text_field_tag :price_gteq, "â‚¬0.00", class: "search-filter-input", readonly: true %>
          </span>
          -
          <span id="max-price">
            <%= text_field_tag :price_lteq, "â‚¬600.00", class: "search-filter-input", readonly: true %>
          </span>
          <span class="caret"></span>
        </a>
        <div id="slider-container" class="dropdown-menu pull-right" aria-labelledby="dLabel">
          <div id="slider-range" class="range-bar" data-max=<%= @max.to_json %> data-min=<%= @min.to_json %>></div>
          <div class="search-options-submit text-center">
            <%= content_tag(:a, 'Apply', name: 'submit', class: 'submit_link') %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <%= submit_tag "Search", id: "subnav-form__submit" %>
<% end %>
